<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.habitual.demo.scenicSpot.mapper.ScenicSpotMapper">

    <insert id="insert" parameterType="com.habitual.demo.scenicSpot.entity.ScenicSpotEntity" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO scenic_spot (
        <trim suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="createBy != null and createBy != ''">create_by,</if>
            create_time,
            <if test="updateBy != null and updateBy != ''">update_by,</if>
            update_time,
            <if test="remark != null and remark != ''">remark,</if>
            <if test="name != null and name != ''">name,</if>
            <if test="type != null and type != ''">type,</if>
            <if test="image != null and image != ''">image,</if>
            <if test="level != null and level != ''">level,</if>
            <if test="location != null and location != ''">location,</if>
            <if test="price != null">price,</if>
            <if test="stock != null">stock,</if>
            <if test="openTime != null and openTime != ''">open_time,</if>
            <if test="precautions != null and precautions != ''">precautions,</if>
            <if test="trafficGuide != null and trafficGuide != ''">traffic_guide,</if>
            <if test="introduce != null and introduce != ''">introduce</if>
        </trim>
        ) VALUES (
        <trim suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="createBy != null and createBy != ''">#{createBy},</if>
            #{createTime},
            <if test="updateBy != null and updateBy != ''">#{updateBy},</if>
            #{updateTime},
            <if test="remark != null and remark != ''">#{remark},</if>
            <if test="name != null and name != ''">#{name},</if>
            <if test="type != null and type != ''">#{type},</if>
            <if test="image != null and image != ''">#{image},</if>
            <if test="level != null and level != ''">#{level},</if>
            <if test="location != null and location != ''">#{location},</if>
            <if test="price != null">#{price},</if>
            <if test="stock != null">#{stock},</if>
            <if test="openTime != null and openTime != ''">#{openTime},</if>
            <if test="precautions != null and precautions != ''">#{precautions},</if>
            <if test="trafficGuide != null and trafficGuide != ''">#{trafficGuide},</if>
            <if test="introduce != null and introduce != ''">#{introduce}</if>
        </trim>
        )
    </insert>

    <update id="update" parameterType="com.habitual.demo.scenicSpot.entity.ScenicSpotEntity">
        UPDATE scenic_spot
        <set>
            <trim suffixOverrides=",">
                <if test="createBy != null and createBy != ''">create_by = #{createBy},</if>
                create_time = #{createTime},
                <if test="updateBy != null and updateBy != ''">update_by = #{updateBy},</if>
                update_time = #{updateTime},
                <if test="remark != null and remark != ''">remark = #{remark},</if>
                <if test="name != null and name != ''">name = #{name},</if>
                <if test="type != null and type != ''">type = #{type},</if>
                <if test="image != null and image != ''">image = #{image},</if>
                <if test="level != null and level != ''">level = #{level},</if>
                <if test="location != null and location != ''">location = #{location},</if>
                <if test="price != null">price = #{price},</if>
                <if test="stock != null">stock = #{stock},</if>
                <if test="openTime != null and openTime != ''">open_time = #{openTime},</if>
                <if test="precautions != null and precautions != ''">precautions = #{precautions},</if>
                <if test="trafficGuide != null and trafficGuide != ''">traffic_guide = #{trafficGuide},</if>
                <if test="introduce != null and introduce != ''">introduce = #{introduce},</if>
            </trim>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="delete">
        DELETE FROM scenic_spot
        WHERE id = #{id}
    </delete>

    <select id="getTotalCount">
        SELECT COUNT(*) FROM scenic_spot
    </select>

    <select id="selectByPage" parameterType="com.habitual.demo.scenicSpot.entity.dto.ScenicSpotPageDto" resultType="com.habitual.demo.scenicSpot.entity.ScenicSpotEntity">
        SELECT
        id, create_by, create_time, update_by, update_time, remark,
        name, type, image, level, location, price, stock, open_time, precautions, traffic_guide, introduce,
        (SELECT COUNT(*) FROM collect WHERE collect.business_id = scenic_spot.id AND collect.type = '景点门票') AS collect_count
        FROM scenic_spot
        WHERE 1=1
        <if test="name != null and name != ''">
            AND name = #{name}
        </if>
        <if test="type != null and type != ''">
            AND type = #{type}
        </if>
        <if test="level != null and level != ''">
            AND level = #{level}
        </if>
        <if test="createBy != null and createBy != ''">
            AND create_by = #{createBy}
        </if>
        <if test="updateBy != null and updateBy != ''">
            AND update_by = #{updateBy}
        </if>
        <if test="remark != null and remark != ''">
            AND remark = #{remark}
        </if>
        ORDER BY create_time DESC
        LIMIT #{offset}, #{pageSize}
    </select>

    <select id="selectByIdIn" parameterType="list" resultType="com.habitual.demo.scenicSpot.entity.ScenicSpotEntity">
        SELECT
        id, create_by, create_time, update_by, update_time, remark,
        name, type, image, level, location, price, stock, open_time, precautions, traffic_guide, introduce,
        (SELECT COUNT(*) FROM collect WHERE collect.business_id = scenic_spot.id AND collect.type = '景点门票') AS collect_count
        FROM scenic_spot
        WHERE 1=1
        AND id IN
        <foreach item="id" index="index" collection="list" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

    <select id="selectTypeList">
        SELECT DISTINCT type FROM scenic_spot;
    </select>

    <select id="selectRandomFive" resultType="com.habitual.demo.scenicSpot.entity.ScenicSpotEntity">
        SELECT * FROM scenic_spot ORDER BY RAND() LIMIT 5;
    </select>

</mapper>
